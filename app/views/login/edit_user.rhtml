
<div class="post-form">

  <%= error_messages_for 'user' %>

  <fieldset>
    <legend>Enter User Details</legend>

    <% form_for :user do |form| %>
      <p>
        <label for="user_name">名前:</label>
        <%= form.text_field :name, :size => 40 %>
      </p>

      <%= submit_tag "保存する", :class => "submit" %>

    <% end %>
  </fieldset>
</div>
